    "version": "0.2.0",
    "configurations": [
        {
            "name": "Fetch Untranslated Strings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "fetch",
                "--mode",
                "untranslated"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch Untranslated Strings (Force)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "fetch",
                "--mode",
                "untranslated",
                "--force"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch Unreviewed Strings",
